# Environment variables for local development
# Copy this file to .env.local and update the values

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/schedulepro?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate a random string for production)
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-here"
REFRESH_TOKEN_EXPIRES_IN="30d"

# API Configuration
API_PORT=3001
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Email Configuration (using MailHog for development)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@schedulepro.com"

# SendGrid Configuration (for production email)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="Your App Name"

# ZeptoMail Configuration (alternative email provider)
ZEPTO_API_KEY="your-zepto-api-key"
ZEPTO_API_URL="https://api.zeptomail.in/v1.1/email"
ZEPTO_FROM_EMAIL="noreply@yourdomain.com"
ZEPTO_FROM_NAME="Your App Name"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# Encryption Key for calendar tokens
ENCRYPTION_KEY="your-32-character-encryption-key"

# File Upload
MAX_FILE_SIZE=5000000  # 5MB
UPLOAD_PATH="./uploads"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# Environment
NODE_ENV="development"
